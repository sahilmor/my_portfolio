---
import Layout from "@layouts/Layout.astro";
import ServicesList from "@components/Services.astro";
import { SITE_CONTENT } from "@config";
import "../styles/global.css";
---

<Layout>
  <div class="pt-24 pb-12 text-center md:pt-32">
    <h1 class="mb-6 font-serif text-5xl font-bold tracking-tighter text-white md:text-7xl">
      What I can do <span class="text-primary">for you.</span>
    </h1>
    <p class="mx-auto max-w-2xl text-lg text-neutral md:text-xl">
      I help businesses and individuals turn ideas into robust digital solutions. 
      From initial design to final deployment, I handle the technical complexities 
      so you can focus on growth.
    </p>
  </div>
  
  <ServicesList services={SITE_CONTENT.services} />
  
  {/* Optional CTA at the bottom */}
  <div class="py-24 text-center">
    <p class="mb-6 text-2xl font-serif text-white">Have a specific project in mind?</p>
    <a
      href={`mailto:${SITE_CONTENT.hero.email}`}
      class="inline-block rounded-full bg-white/10 px-8 py-4 text-base font-medium text-white transition-colors hover:bg-primary hover:text-white border border-white/10 backdrop-blur-sm"
    >
      Let's Talk
    </a>
  </div>
</Layout>